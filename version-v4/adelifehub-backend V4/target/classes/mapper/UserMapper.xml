<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.adlifehub.adlife.mapper.UserMapper">

    <sql id="BASE_COLS">
        id, username, email, password_hash, nickname, avatar_url, phone, roles_json
    </sql>

    <resultMap id="UserMap" type="com.adlifehub.adlife.model.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="email" property="email"/>
        <result column="password_hash" property="passwordHash"/>
        <result column="nickname" property="nickname"/>
        <result column="avatar_url" property="avatarUrl"/>
        <result column="phone" property="phone"/>
        <result column="roles_json" property="rolesJson"/>
    </resultMap>

    <select id="findById" parameterType="long" resultMap="UserMap">
        SELECT <include refid="BASE_COLS"/> FROM users WHERE id = #{id} LIMIT 1
    </select>

    <select id="findByUsername" parameterType="string" resultMap="UserMap">
        SELECT <include refid="BASE_COLS"/> FROM users WHERE username = #{username} LIMIT 1
    </select>

    <select id="findByEmail" parameterType="string" resultMap="UserMap">
        SELECT <include refid="BASE_COLS"/> FROM users WHERE email = #{email} LIMIT 1
    </select>

    <insert id="insert" parameterType="com.adlifehub.adlife.model.User"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users
        (username, email, password_hash, nickname, avatar_url, phone, roles_json)
        VALUES
            (#{username}, #{email}, #{passwordHash}, #{nickname}, #{avatarUrl}, #{phone}, #{rolesJson})
    </insert>

    <update id="updateProfile">
    UPDATE users
    <set>
        <if test="nickname != null and nickname != ''">nickname = #{nickname},</if>
        <if test="avatarUrl != null and avatarUrl != ''">avatar_url = #{avatarUrl},</if>
        updated_at = NOW()
    </set>
    WHERE id = #{id}
</update>
    <update id="updateRoles">
        UPDATE users SET roles_json = #{rolesJson} WHERE id = #{id}
    </update>
</mapper>
